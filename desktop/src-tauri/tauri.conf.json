{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Drista",
  "version": "0.1.0",
  "identifier": "org.paraxiom.drista",
  "build": {
    "beforeDevCommand": "cd ../../web && npm run dev",
    "devUrl": "http://localhost:3004",
    "beforeBuildCommand": "",
    "frontendDist": "../../web/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Drista — दृष्टा",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
