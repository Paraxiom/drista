{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Quantum Communicator",
  "version": "0.1.0",
  "identifier": "com.quantumharmony.communicator",
  "build": {
    "beforeDevCommand": "cd ../../web && npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "cd ../../web && npm run build",
    "frontendDist": "../../web/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Quantum Communicator",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
